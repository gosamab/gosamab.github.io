---
// src/components/ProjectCard.astro
interface Props {
	title: string;
	description: string;
	slug: string;
	imageUrl?: string;
	tags?: string[];
}

const {
	title,
	description,
	slug,
	imageUrl = "/images/project-placeholder.jpg",
	tags = [],
} = Astro.props;
---

<div
	class="bg-white p-6 rounded-xl shadow hover:shadow-lg transition flex flex-col"
>
	<img
		src={imageUrl}
		alt={title}
		class="rounded-md mb-4 w-full h-40 object-cover"
	/>
	<h3 class="text-xl font-semibold text-blue-700 mb-2">{title}</h3>
	<p class="text-sm text-gray-700 flex-grow">{description}</p>
	<a href={`/projects/${slug}`} class="text-blue-500 text-sm inline-block mt-4"
		>Learn more â†’</a
	>
</div>
