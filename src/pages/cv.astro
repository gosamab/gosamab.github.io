---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Curriculum Vitae | Osama Azab">
	<section class="py-20 px-6">
		<div class="max-w-4xl mx-auto text-center">
			<h1 class="text-4xl font-bold text-sky-800 mb-6">Curriculum Vitae</h1>
			<p class="text-gray-600 mb-8">
				You can view or download my latest CV below.
			</p>

			<!-- PDF Viewer -->
			<div class="border shadow rounded-md overflow-hidden mb-6">
				<embed
					src="/CV.pdf"
					type="application/pdf"
					width="100%"
					height="600px"
				/>
			</div>

			<!-- Download Button -->
			<a
				href="/CV.pdf"
				download
				class="inline-block bg-sky-700 hover:bg-sky-800 text-white font-medium py-2 px-6 rounded-md transition"
			>
				Download PDF
			</a>
		</div>
	</section>
</BaseLayout>
