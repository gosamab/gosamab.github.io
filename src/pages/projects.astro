---
import BaseLayout from "../layouts/BaseLayout.astro";
import ProjectCard from "../components/ProjectCard.astro";

const projects = [
	{
		title: "Makhtotah Research Project",
		description:
			"Improving OCR accuracy on Arabic historical documents using deep learning and classical binarization methods.",
		slug: "makhtotah-research",
		tags: ["AI", "OCR", "Deep Learning", "Arabic NLP"],
		imageUrl: "/images/makhtotah-research.jpg",
	},
	{
		title: "Makhtotah Platform",
		description:
			"OCR-based web app to digitize Arabic manuscripts using Python, Flask, and Azure Vision.",
		slug: "makhtotah-platform",
		tags: ["OCR", "Flask", "Azure", "Web App"],
		imageUrl: "/images/makhtotah-platform.jpg",
	},
	{
		title: "OCR/HWR Implementation",
		description:
			"Implementing OCR/HWR by finetuning Qwen2 on Arabic data with custom preprocessing pipelines.",
		slug: "arabic-ocr-hwr",
		tags: ["NLP", "Qwen2", "Arabic", "ML"],
		imageUrl: "/images/arabic-ocr.jpg",
	},
	{
		title: "Cyberattacks Real-Time Detection",
		description:
			"ML models for detecting DGA/Botnet/DDoS attacks using DNS and traffic logs with live data ingestion.",
		slug: "cyberattacks-detection",
		tags: ["Cybersecurity", "ML", "Real-time Analytics"],
		imageUrl: "/images/cyber-detection.jpg",
	},
	{
		title: "Streams Platform",
		description:
			"Full-stack .NET + React app demonstrating SQL and schema design with integrated web scraping.",
		slug: "streams-platform",
		tags: [".NET", "React", "SQL", "Web Scraping"],
		imageUrl: "/images/streams-platform.jpg",
	},
	{
		title: "Hadoop Cluster",
		description:
			"8-node Hadoop cluster deployment across 2 machines, tested on various big data processing tasks.",
		slug: "hadoop-cluster",
		tags: ["Hadoop", "Distributed Systems", "Big Data"],
		imageUrl: "/images/hadoop-cluster.jpg",
	},
	{
		title: "Skill Tree App",
		description:
			"Gamified Angular + Firebase app for building and tracking skill trees, with AI integration via ChatGPT and Gemini.",
		slug: "skill-tree",
		tags: ["Angular", "Firebase", "AI", "Gamification"],
		imageUrl: "/images/skill-tree.jpg",
	},
	{
		title: "Scored",
		description:
			"Goal planning and progress tracking app built with Express and React. Uses AI prompts and gamification mechanics.",
		slug: "scored-app",
		tags: ["Express.js", "React", "AI", "Gamification"],
		imageUrl: "/images/scored.jpg",
	},
];
---

<BaseLayout title="Projects | Osama Azab">
	<section class="py-20 px-6">
		<div class="max-w-6xl mx-auto">
			<header class="text-center mb-12">
				<h1 class="text-4xl font-bold text-sky-800">Projects</h1>
				<p class="text-gray-600 max-w-xl mx-auto mt-2">
					A collection of my technical work, research, and implementations
				</p>
			</header>

			<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
				{
					projects.map((project) => (
						<ProjectCard
							title={project.title}
							description={project.description}
							slug={project.slug}
							tags={project.tags}
							imageUrl={project.imageUrl}
						/>
					))
				}
			</div>
		</div>
	</section>
</BaseLayout>
